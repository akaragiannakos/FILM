@model Film

<h2>Dodaj nowy film</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Nazwa:</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Opis:</label>
        <input asp-for="Description" />
    </div>
    <div>
        <label>Cena:</label>
        <input asp-for="Price" type="number" />
    </div>
    <button type="submit">Dodaj</button>
</form>

<a asp-action="Index">Powrót do listy</a>
